<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.select(:category_id, @categories.collect {|p| [ p.title, p.id ] }, { :prompt => "-- Select Category --" }) %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :placeholder => "Enter text ..." %>
  </div>
  <div class="field">
    <%= f.label :job_type %><br />
    <%= f.select(:job_type, @types.collect {|t| [ t.capitalize, t ] }, { :prompt => "-- Select Type --" }) %>
  </div>
  <div class="field">
    <%= f.label :salary %><br />
    <%= f.select(:salary, @salaries.collect {|s| [ s.capitalize, s ] }) %>
  </div>
  <div class="field">
    <%= f.label :apply_to %><br />
    <%= f.text_area :apply_to %>
  </div>
  <div class="field">
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    Tag skills :<br />
    <%= f.text_field :skill_list %>
  </div>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="field">
    <%= f.check_box :highlight %>
    <%= f.label :highlight %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
